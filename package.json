{
  "name": "skilldash",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true next build",
    "bundle-size": "node scripts/analyze-bundle.js",
    "lighthouse": "lighthouse https://skilldash.live --output html --output-path ./lighthouse-report.html --chrome-flags=\"--headless\"",
    "lighthouse-ci": "lighthouse https://skilldash.live --output json --output-path ./lighthouse-report.json",
    "perf-test": "pnpm run lighthouse && pnpm run bundle-size",
    "clean": "rimraf .next out",
    "prebuild": "pnpm run clean",
    "postbuild": "next-sitemap",
    "deps-check": "pnpm outdated",
    "deps-update": "pnpm update",
    "security-audit": "pnpm audit --audit-level moderate",
    "cap-build": "pnpm build && cap copy apk/android",
    "cap-dev": "cap open apk/android",
    "cap-sync": "cap sync apk/android",
    "apk": "pnpm cap-build && cd apk/android && ./gradlew assembleDebug"
  },
  "dependencies": {
    "@ai-sdk/perplexity": "^2.0.20",
    "@google/generative-ai": "^0.24.1",
    "@headlessui/react": "^2.2.9",
    "@perplexity-ai/perplexity_ai": "^0.6.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "ai": "^5.0.99",
    "contentful": "^11.9.0",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "groq-sdk": "^0.32.0",
    "mammoth": "^1.11.0",
    "next": "^15.5.6",
    "pdf-parse": "^2.4.5",
    "perplexity-sdk": "^1.0.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^9.1.0",
    "vercel": "^48.10.10"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/json-schema": "^7.0.15",
    "@types/node": "24.5.2",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.22",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.6",
    "lighthouse": "^12.8.2",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
